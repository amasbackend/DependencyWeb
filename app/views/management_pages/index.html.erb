<div class="container mx-auto px-4">
  <!-- 標題和匯入按鈕 -->
  <div class="relative flex items-center justify-center my-6">
    <h1 class="text-4xl font-extrabold text-gray-800">📂 關聯文件</h1>
  </div>
  <div class="absolute right-0">
    <%= link_to new_code_analysis_path,
          class: "px-6 py-3 bg-white text-black border border-gray-300 rounded-lg shadow-md hover:bg-gray-50 hover:shadow-lg hover:scale-105 active:bg-gray-100 active:scale-95 transition duration-200 text-sm font-medium" do %>
      ➕ GitHub 專案匯入
    <% end %>
  </div>
  <br>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @companies.each do |company| %>
      <%= link_to "/management_pages/#{company.id}", 
         class: "group block p-6 rounded-2xl shadow-lg border border-gray-300 bg-gradient-to-r from-blue-100 to-blue-50 
                hover:from-blue-200 hover:to-blue-100 hover:shadow-xl transform transition-all duration-300 hover:scale-105" do %>
        <div class="flex flex-col items-center justify-center h-40">
          <p class="text-xl font-semibold text-blue-700 group-hover:text-blue-900 transition duration-300">
            <%= company.name %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
